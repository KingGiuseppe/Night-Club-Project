 package controller;

import bags.AccountBag;
import model_for_newuser.NewUser;
import model_for_newuser.NewUserObject;
import model_for_newuser.Person;
import view_for_login.Main_Window;

public class NewUserController {
	
	public NewUserController(AccountBag model, Main_Window view) {
		
		view.setButtonListener(new GenericButtonListener<Object>() {

			private String firstname;
			private String lastname;
			private String gender;
			private String zip;
			private String email;
			private String username;
			private String password;
			
			
			@Override
			public void btnClicked(Object ev) {
				firstname = ((Person) ev).getFirstName();
				lastname = ((Person) ev).getLastName();
				gender = ((Person) ev).getGender();
				zip = ((Person) ev).getZip();
				email = ((NewUser) ev).getEmail();
				username = ((NewUser) ev).getUsername();
				password = ((NewUser) ev).getPassword();
				model.addGuestAcc(new NewUser(firstname, lastname, gender, zip, email, 
						username, password, 0));
			}
			
		});
		
		
		
	}
}
