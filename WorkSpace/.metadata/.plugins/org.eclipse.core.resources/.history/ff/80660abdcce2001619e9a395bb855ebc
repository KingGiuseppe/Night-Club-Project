package p1;

import java.io.Serializable;

public class ChatMessage implements Serializable {

	private int id; // to identify message type
	private String message; // message itself
	private String name;  // screen name

	public ChatMessage(int id, String message, String name) {
		this.id = id;
		this.message = message;
		this.name = name;
	}

	public int getId() {
		return id;
	}

	public String getMessage() {
		return message;
	}

	public String getName() {
		return name;
	}

}
